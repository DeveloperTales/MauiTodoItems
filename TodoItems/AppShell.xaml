<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TodoItems.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TodoItems"
    xmlns:views="clr-namespace:TodoItems.Views"
    >
    <Tab Title="TodoItems">
        <ShellContent
            Title="Todos"
            ContentTemplate="{DataTemplate views:TodoItemsPage}"
            Route="todoItems"/>
        <ShellContent
            Title="Quotes"
            ContentTemplate="{DataTemplate views:QuotesPage}"
            Route="quotes"/>
    </Tab>
</Shell>
